@using ClientApp.Models.Transfer;
@{
    ViewData["Title"] = "Quản lý người dùng";
}

@model List<UserModel>

<div class="row justify-content-center">
    <div class="col-9 col-md-9 col-lg-6 mt-5">
        <p class="h4">Quản lý người dùng</p>
        <form class="d-flex flex-column justify-content-center" method="POST" asp-controller="Admin" asp-action="UserManager">
            
            <table class="table">
                <thead>
                    <tr>
                        <th scope="col">Stt</th>
                        <th scope="col">Họ tên</th>
                        <th scope="col">Phòng ban</th>
                        <th scope="col">Quyền đăng ký</th>
                        <th scope="col">Quyền hệ thống</th>
                    </tr>
                </thead>
                <tbody>
                    @if (Model.Count > 0)
                    {
                        int i = 1;
                        foreach (var u in Model)
                        {
                            <tr>
                                <th scope="row">@i</th>
                                <td>@u.FullName</td>
                                <td>@u.Dep!.DepName</td>
                                <td>@u.CompRole!.CompRoleName</td>
                                <td>@u.SysRole!.SysRoleName</td>
                            </tr>
                            i++;
                        }
                    }
                </tbody>
            </table>
        </form>
    </div>
</div>